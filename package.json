{
  "name": "rebel-ui-lib-components",
  "version": "0.0.1",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/rebel-components.umd.cjs",
  "module": "./dist/rebel-components.js",
  "exports": {
    ".": {
      "import": "./dist/rebel-components.js",
      "require": "./dist/rebel-components.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite ",
    "build": "npm run codegen && tsc && vite build",
    "build:app": "npm run codegen && vite build --config vite.app.config.js",
    "preview": "vite preview",
    "preview:app": "vite preview --config vite.app.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "codegen": "node scripts/generate-tokens.js",
    "deploy": "./scripts/deploy.sh"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lit": "^3.2.1",
    "sass": "^1.89.2",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@storybook/addon-a11y": "^9.0.17",
    "@storybook/addon-docs": "^9.0.17",
    "@storybook/addon-vitest": "^9.0.17",
    "@storybook/web-components-vite": "^9.0.17",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@tokens-studio/sd-transforms": "^2.0.1",
    "@types/jest": "^30.0.0",
    "@types/jest-axe": "^3.5.9",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-storybook": "^9.0.17",
    "jest": "^30.0.4",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.4",
    "playwright": "^1.54.1",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "storybook": "^9.0.17",
    "style-dictionary": "^5.0.1",
    "style-dictionary-utils": "^4.1.0",
    "tailwindcss": "^3.3.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^3.2.4"
  }
